s=0
repeat
stick key
if key=2:redraw 0,64,160,208,208:color 0,0,0:boxf 64,160,208,208:color 255,255,255:boxf 64,160,160,176:color 0,0,0:pos 0,160:mes "	固定ディスク":color 255,255,255:mes "":mes "	フロッピィディスク":redraw 1,64,160,208,208:s=0
